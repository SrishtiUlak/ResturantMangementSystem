@model RMS.Model.viewModes.UserTypeDTOs
@{
    ViewBag.Title = "Create";
}

<div class="container" style="margin-top: 2%;">
    <div class=" mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/UserType" style=" float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size: 30px; font-weight: bold; color:black;">Create New User Type</samp>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">

                        <label style="font-weight: bold;font-size: 1.3em;">User Type</label>   <br />
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(x => x.Type, "", new { @class = "form-control", @placeholder = "Enter User Type" })

                    </div>
                    <div class="text-center">
                        <input type="submit" value="Create" class="btn bg-gradient-primary mt-4 " style=" display: block; margin-left: auto; margin-right: auto; width: 50%; "/>                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
