@model RMS.Model.viewModes.CustomerDTOs
@{
    ViewBag.Title = "Create";
}

<div class=" container" style="margin-top:2%">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/Customer" style="float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size:30px; font-weight:bold; color:black;">Create New Customer</samp>

            </div> 
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        
                            <div class="col">
                                <label style="font-weight: bold; font-size:1.3em;">Full Name</label>
                                @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(x => x.CustomerName, "", new { @class = "form-control", @placeholder = "Enter full name" })

                            </div>
                            <div class="col">
                                <label style="font-weight: bold; font-size:1.3em;">Address</label>
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(x => x.Address, "", new { @class = "form-control", @placeholder = "Enter full Address" })

                            </div>
                            <div class="col">
                                <label style="font-weight: bold; font-size:1.3em;">Contact Number</label>
                                @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(x => x.Contact, "", new { @class = "form-control", @placeholder = "Enter contact number" })

                            </div>
                       
                    </div>
                    <div class="text-center">
                        <input type="submit" value=" Create" class="btn bg-gradient-primary mt-4" style=" display: block; margin-left: auto; margin-right: auto; width: 50%; " />
                               
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


