                </div>

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Phone Number</label>   <br />
                    @Html.DisplayFor(model => model.PhoneNumber)

                </div>

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Address</label>   <br />
                    @Html.DisplayFor(model => model.Address)

                </div>


                <div class="mb-3">



                    <label style="font-weight: bold;font-size: 1.3em;">User Type</label>   <br />
                    @Html.DisplayFor(model => model.UserType)

                </div>
                <div>
                    <spam class="btn bg-gradient-primary" style="color:white;">@Html.ActionLink("Edit", "Edit", new { id = Model.UserId })</spam>
                    <spam class="btn bg-gradient-primary" style="color:white;">@Html.ActionLink("Delete", "Delete", new { id = Model.UserId })</spam>

                </div>

            </div>
        </div>

    </div>
</div>

