@model RMS.Model.viewModes.UserDTOs

@{
    ViewBag.Title = "Details";
}

<div class="container" style="margin-top: 2%;">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/User" style=" float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size: 20px; font-weight: bold; color:black;">User Details </samp>
            </div>
            <div class="card-body">

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">First Name</label>   <br />
                    @Html.DisplayFor(model => model.FirstName)

                </div>

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Last Name</label>   <br />
                    @Html.DisplayFor(model => model.LastName)

                </div>

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">User Name</label>   <br />
                    @Html.DisplayFor(model => model.UserName)

                </div>

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Email</label>   <br />
                    @Html.DisplayFor(model => model.Email)

                </div>

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Password</label>   <br />
                    @Html.DisplayFor(model => model.Password)

                </div>

