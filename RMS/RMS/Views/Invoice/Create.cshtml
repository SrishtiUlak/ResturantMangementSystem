            <option value="0">Please select</option>
        </select>
        <input type="" name="Complete" />
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript">
            $("body").on("change", "#ddlInvoice", function () {
                $("input[name=Status]").val($(this).find("option:selected").text());
            });
        </script>*@
                        @if (ViewBag.Message != null)
                        {
                            <script type="text/javascript">
                                    $(function () {
                                        alert("@ViewBag.Message");
                                    });
                            </script>
                        }






                    </div>
                    <div class="text-center">
                        <input type="submit" value="Create" class="btn bg-gradient-primary mt-4 " style=" display: block; margin-left: auto; margin-right: auto; width: 50%; " />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

