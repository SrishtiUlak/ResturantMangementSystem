@model RMS.Model.viewModes.InventoryProductDTOs

@{
    ViewBag.Title = "Create";
}
 <div class="container" style="margin-top: 2%;">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/InventoryProduct" style=" float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size: 20px; font-weight: bold; color:black;">InventoryProduct</samp>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label style="font-weight: bold;font-size: 1.3em;">Product Name</label>   <br />
                        @Html.ValidationMessageFor(model => model.ProductsName, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(x => x.ProductsName, "", new { @class = "form-control", @placeholder = "Enter Products Name" })

                    </div>

                   

                    <div class="mb-3">
                        <label class="control-label" for="ManufactureDate">Manufacture Date</label>
                        <input class="form-control datepicker" type="date" data-val="true" data-val-required="The Order Date field is required." id="ManufactureDate" name="ManufactureDate" placeholder="dd/mm/yyy" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="ManufactureDate" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">
                        <label class="control-label" for="ExpDate">ExpDate</label>
                        <input class="form-control datepicker" type="date" data-val="true" data-val-required="The Order Date field is required." id="ExpDate" name="ExpDate" placeholder="dd/mm/yyy" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="ExpDate" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">

                        <label style="font-weight: bold;font-size: 1.3em;">Description</label>   <br />
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(x => x.Description, "", new { @class = "form-control", @placeholder = "Enter Description" })
                    </div>
                    <div class="mb-3">
                        <label style="font-weight: bold;font-size: 1.3em;"> Category</label>   <br />
                        @Html.DropDownListFor(x => x.CategoryID, new SelectList(Model.Categories, "Id", "Name"), new { @class = "form-control form-control-lg", required = "required" })
                        @Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })

                    </div>


                    <div class="text-center">
                        <input type="submit" value="Save" class="btn bg-gradient-primary mt-4 " style=" display: block; margin-left: auto; margin-right: auto; width: 40%; " />

                    </div>
                </form>
                </div>
               </div>
            </div>
            </div>

