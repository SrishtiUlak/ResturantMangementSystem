@model RMS.Model.viewModes.InventoryProductDTOs

@{
    ViewBag.Title = "Details";
}

<div class="container" style="margin-top: 2%;">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/InventoryProduct" style=" float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size: 20px; font-weight: bold; color:black;">Inventory Products Details</samp>
            </div>
            <div class="card-body">

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Product Name</label>   <br />
                    @Html.DisplayFor(model => model.ProductsName)

                </div>

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Manufacture Date</label>   <br />
                    @Html.DisplayFor(model => model.ManufactureDate)

                </div>

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Expiry Date</label>   <br />
                    @Html.DisplayFor(model => model.ExpDate)

                </div>

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Description</label>   <br />
                    @Html.DisplayFor(model => model.Description)

                </div>

                <div class="mb-3">



                    <label style="font-weight: bold;font-size: 1.3em;">Category</label>   <br />
                    @Html.DisplayFor(model => model.Category)

                </div>
                <div>
                    <spam class="btn bg-gradient-primary" style="color:white;">@Html.ActionLink("Edit", "Edit", new { id = Model.InventoryProductID })</spam>
                    @*<spam class="btn bg-gradient-primary" style="color:white;">@Html.ActionLink("Delete", "Delete", new { id = Model.InventoryProductID })</spam>*@
                    <spam class="btn bg-gradient-primary" style="color:white;">@Html.ActionLink("Delete", "Delete", new {id = Model.InventoryProductID})</spam>
                </div>

            </div>
        </div>
    </div>
</div>





