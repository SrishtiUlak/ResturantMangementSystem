@model RMS.Model.viewModes.BookingDTOs

@{
    ViewBag.Title = "Create";
}
<div class="container" style="margin-top: 2%;">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/Booking" style=" float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size: 20px; font-weight: bold; color:black;">Booking</samp>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label style="font-weight: bold;font-size: 1.3em;">Date</label>   <br />
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        <input class="form-control datepicker" type="date" data-val="true" data-val-required="The Date field is required." id="Date" name="Date" placeholder="dd/mm/yyy" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="Date" data-valmsg-replace="true"></span>
                    </div>

                 
                    <div class="mb-3">

                        <label style="font-weight: bold;font-size: 1.3em;">Description</label>   <br />
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(x => x.Description, "", new { @class = "form-control", @placeholder = "Enter Description" })

                    </div>

                    <div class="mb-3">

                        <label style="font-weight: bold;font-size: 1.3em;">CustomerID</label>   <br />
                        @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                        @Html.DropDownListFor(x => x.CustomerID, new SelectList(Model.Customers, "Id", "Name"), new { @class = "form-control form-control-lg ", required = "required" })

                    </div>

                    <div class="mb-3">

                        <label style="font-weight: bold;font-size: 1.3em;">CustomerID</label>   <br />
                        @Html.ValidationMessageFor(model => model.TableID, "", new { @class = "text-danger" })
                        @Html.DropDownListFor(x => x.TableID, new SelectList(Model.Tables, "Id", "Name"), new { @class = "form-control form-control-lg ", required = "required" })

                    </div>

                    <div class="text-center">
                        <input type="submit" value="Save" class="btn bg-gradient-primary mt-4 " style=" display: block; margin-left: auto; margin-right: auto; width: 40%; " />

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

