@model RMS.Model.viewModes.MenuDTOs

@{
    ViewBag.Title = "Details";
}

<div class="container" style="margin-top: 2%;">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/Menu" style=" float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size: 20px; font-weight: bold; color:black;">Menu Details</samp>
            </div>
            <div class="card-body">

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Dish Name</label>   <br />
                    @Html.DisplayFor(model => model.MenuName)

                </div>

                <div class="mb-3">

                    <label style="font-weight: bold;font-size: 1.3em;">Dish Price</label>   <br />
                    @Html.DisplayFor(model => model.MenuPrice)

                </div>

                <div class="mb-3">

                   

                    <label style="font-weight: bold;font-size: 1.3em;">Sub Category</label>   <br />
                    @Html.DisplayFor(model => model.DishSubCategory)

                </div>
                <div>
                    <spam class="btn bg-gradient-primary" style="color:white;">@Html.ActionLink("Edit", "Edit", new { id = Model.MenuID })</spam>
                    <spam class="btn bg-gradient-primary" style="color:white;">@Html.ActionLink("Delete", "Delete", new { id = Model.MenuID })</spam>

                </div>

            </div>
        </div>
    </div>
</div>

