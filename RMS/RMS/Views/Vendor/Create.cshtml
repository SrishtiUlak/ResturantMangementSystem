@model RMS.Model.viewModes.VendorDTOs
@{
    ViewBag.Title = "Create";
}

<div class="container" style="margin-top: 2%;">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/Vendor" style=" float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size: 20px; font-weight: bold; color:black;">Vendor</samp>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">

                        <label style="font-weight: bold;font-size: 1.3em;">Vendor Name</label>   <br />
                        @Html.ValidationMessageFor(model => model.VendorName, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(x => x.VendorName, "", new { @class = "form-control", @placeholder = "Enter Vendor" })


                    </div>
                    <div class="text-center">
                        <input type="submit" class="btn bg-gradient-primary mt-4 w-100" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

