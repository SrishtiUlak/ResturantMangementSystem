@model RMS.Model.viewModes.DishSubCategoryDTOs
@{
    ViewBag.Title = "Create";
}

<div class="container" style="margin-top:2%;">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/DishSubCategory/Create" style=" float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size: 20px; font-weight: bold; color:black;">Create Dish Sub Category</samp>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">

                        <label style="font-weight: bold;font-size: 1.3em;">Category</label>   <br />
                        @Html.ValidationMessageFor(model => model.SubCategoryName, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(x => x.SubCategoryName, "", new { @class = "form-control", @placeholder = "Enter Sub Category" })

                    </div>
                    <div class="mb-3">

                        <label style="font-weight: bold;font-size: 1.3em;">Dish Category</label>   <br />
                        @Html.ValidationMessageFor(model => model.DishCategoryId, "", new { @class = "text-danger" })
                        @Html.DropDownListFor(x => x.DishCategoryId, new SelectList(Model.DishCategorys, "Id", "Name"), new { @class = "form-control form-control-lg ", required = "required" })


                    </div>
                    <div class="text-center">
                        <input type="submit" value="Create" class="btn bg-gradient-primary mt-4 " style=" display: block; margin-left: auto; margin-right: auto; width: 50%; " />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

