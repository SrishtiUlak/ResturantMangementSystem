@model RMS.Model.viewModes.DishSubCategoryDTOs

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.SubCategoryId)
    <div class="container" style="margin-top: 2%;">
        <div class="mx-auto">
            <div class="card">
                <div class="form-horizontal">

                    <div class="card-header text-center pt-4">
                        <span>
                            <a href="/DishSubCategory" style=" float:left;">
                                <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                            </a>
                        </span>
                        <samp style="font-size: 30px; font-weight: bold; color:black;">Edit Sub Category</samp>
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.SubCategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.SubCategoryName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SubCategoryName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12">
                                <input type="submit" value="Save" class="btn bg-gradient-primary mt-4 " style=" display: block; margin-left: auto; margin-right: auto; width: 40%; " />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

